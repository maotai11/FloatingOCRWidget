<Window x:Class="FloatingOCRWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OCR Widget"
        Height="235" Width="270"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- 標籤 chip 樣式：圓角按鈕 -->
        <Style x:Key="TagChipStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="0,0,3,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="9"
                                Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#E2E8F0"
            BorderBrush="#CBD5E0"
            BorderThickness="1"
            CornerRadius="8"
            Opacity="{Binding ElementName=OpacitySlider, Path=Value}">

        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 功能按鈕列 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="OCRButton" Content="OCR" Click="OCRButton_Click"
                        ToolTip="點擊開始螢幕區域OCR識別"/>
                <Button Name="TraditionalButton" Content="繁" Click="TraditionalButton_Click"
                        Width="28" Background="#3182CE" Foreground="White"
                        BorderBrush="#2B6CB0" Padding="2,2"
                        ToolTip="繁中模式：開啟（點擊切換）"/>
                <Button Name="HideButton" Content="隱藏" Click="HideButton_Click"
                        ToolTip="隱藏浮動視窗"/>
                <Button Name="MenuButton" Content="&#8801;" Click="MenuButton_Click" Width="24"
                        ToolTip="開啟選單"/>
            </StackPanel>

            <!-- 透明度控制 -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6,0,0">
                <TextBlock Text="透明度:" VerticalAlignment="Center"
                           FontSize="10" Foreground="#4A5568" Margin="0,0,4,0"/>
                <Slider Name="OpacitySlider" Width="130"
                        Minimum="0.3" Maximum="1.0" Value="0.9"
                        VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ElementName=OpacitySlider, Path=Value, StringFormat={}{0:P0}}"
                           VerticalAlignment="Center" FontSize="10"
                           Foreground="#4A5568" Margin="4,0,0,0"/>
            </StackPanel>

            <!-- 標籤篩選列（多選 chip，可換行） -->
            <Border Grid.Row="2" Margin="0,5,0,0"
                    Background="#F7FAFC" BorderBrush="#E2E8F0"
                    BorderThickness="1" CornerRadius="4"
                    Padding="4,3" MaxHeight="52">
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <WrapPanel Name="TagFilterPanel" Orientation="Horizontal"/>
                </ScrollViewer>
            </Border>

            <!-- 剪貼簿歷史區域 -->
            <Border Grid.Row="3" Background="White"
                    BorderBrush="#CBD5E0" BorderThickness="1"
                    CornerRadius="4" Margin="0,5,0,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="125">
                    <ListBox Name="ClipboardHistory"
                             Background="Transparent"
                             BorderThickness="0"
                             HorizontalContentAlignment="Stretch"
                             SelectionChanged="ClipboardHistory_SelectionChanged"
                             MouseRightButtonUp="ClipboardHistory_RightClick">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="4,3"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <!-- 預覽文字 -->
                                    <TextBlock Text="{Binding Preview}"
                                               FontSize="9"
                                               Foreground="#2D3748"
                                               TextTrimming="CharacterEllipsis"
                                               ToolTip="{Binding FullText}"/>
                                    <!-- 標籤 chips（有標籤才顯示） -->
                                    <ItemsControl ItemsSource="{Binding Tags}"
                                                  Margin="0,2,0,0">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#BEE3F8" CornerRadius="4"
                                                        Margin="0,0,3,0" Padding="4,1">
                                                    <TextBlock Text="{Binding}"
                                                               FontSize="8" Foreground="#2B6CB0"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>

        </Grid>
    </Border>
</Window>
