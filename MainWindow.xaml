<Window x:Class="FloatingOCRWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OCR Widget"
        Height="140" Width="240"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Border Background="#E2E8F0"
            BorderBrush="#CBD5E0"
            BorderThickness="1"
            CornerRadius="8"
            Opacity="{Binding ElementName=OpacitySlider, Path=Value}">

        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 功能按鈕列 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="OCRButton" Content="OCR" Click="OCRButton_Click"
                        ToolTip="點擊開始螢幕區域OCR識別"/>
                <Button Name="HideButton" Content="隱藏" Click="HideButton_Click"
                        ToolTip="隱藏浮動視窗"/>
                <Button Name="MenuButton" Content="≡" Click="MenuButton_Click" Width="24"
                        ToolTip="開啟選單"/>
            </StackPanel>

            <!-- 透明度控制 -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
                <TextBlock Text="透明度:" VerticalAlignment="Center"
                           FontSize="10" Foreground="#4A5568" Margin="0,0,4,0"/>
                <Slider Name="OpacitySlider" Width="120"
                        Minimum="0.3" Maximum="1.0" Value="0.9"
                        VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ElementName=OpacitySlider, Path=Value, StringFormat={}{0:P0}}"
                           VerticalAlignment="Center" FontSize="10"
                           Foreground="#4A5568" Margin="4,0,0,0"/>
            </StackPanel>

            <!-- 剪貼簿歷史區域 -->
            <Border Grid.Row="2" Background="White"
                    BorderBrush="#CBD5E0" BorderThickness="1"
                    CornerRadius="4" Margin="0,8,0,0"
                    Name="ClipboardPanel">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="100">
                    <ListBox Name="ClipboardHistory"
                             Background="Transparent"
                             BorderThickness="0"
                             SelectionChanged="ClipboardHistory_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Preview}"
                                           FontSize="9"
                                           Foreground="#2D3748"
                                           TextTrimming="CharacterEllipsis"
                                           ToolTip="{Binding FullText}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>

        </Grid>
    </Border>
</Window>